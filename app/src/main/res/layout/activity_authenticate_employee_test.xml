<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingBottom="@dimen/activity_vertical_margin">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Press this button to Authenticate any employee (ACTION_AUTHENTICATE_EMPLOYEE):" />

  <Button
    android:id="@+id/btn_any"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Any Employee" />

  <TextView
    android:id="@+id/tv_employee"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Press this button to Authenticate employee (ACTION_AUTHENTICATE_EMPLOYEE): " />

  <Button
    android:id="@+id/btn_active"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Current Employee" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@android:color/holo_red_dark"
    android:text="THIS METHOD IS DEPRECATED. Please use ACTION_AUTHENTICATE_EMPLOYEE." />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Press this button to request admin role (ACTION_REQUEST_ROLE): " />

  <Button
    android:id="@+id/btn_request_admin_role"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Admin Role" />


  <TextView
    android:id="@+id/log_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin" />

</LinearLayout>
